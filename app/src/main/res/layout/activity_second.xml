<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F0F4F7"
    tools:context=".SecondActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Packing List"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnDisplayList"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Display All"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#009688"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btnDisplayFiltered"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Qty &gt;= 2"
            android:layout_marginStart="8dp"
            android:backgroundTint="#FF9800"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/list_background"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvPackingList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Press a button to see your list."
            android:textSize="16sp"
            android:textColor="#333333"/>
    </ScrollView>

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return to Main Screen"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:textSize="18sp"
        android:backgroundTint="#607D8B"
        android:textColor="@android:color/white"/>

</LinearLayout>